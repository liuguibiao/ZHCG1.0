@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>转移属性编辑</title>
</head>
<body>
    <!-- Modal -->
    <div class="modal-body">
        <div id="transition-property-controller" style="height:200px;">
            <p>
                <span class="a_tit">描述:</span>
                <span><input type="text" id="txtDescription" class="form-control" style="width:340px;" /></span>
            </p>
            <p>
                <span class="a_tit">接收者类型:</span>
                <select id="ddlReceiverType" class="form-control" style="width:340px;" >
                    <option value="default">--请选择--</option>
                    <option value="Superior">上司</option>
                    <option value="Compeer">同事</option>
                    <option value="Subordinate">下属</option>
                </select>
            </p>
            <p>
                <span class="a_tit">条件表达式:</span>
                <span><textarea id="txtCondition" class="bcxj form-control" style="height:60px;"></textarea></span>
            </p>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" data-dismiss="modal" onclick="transitionproperty.save();">确定</button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
    </div>

    <script type="text/javascript">
        $(function () {
            transitionproperty.load();
        });
    </script>

</body>
</html>